<div class="d-flex align-items-center mt-3">
  <h1 class="mb-0">All Lists</h1>
  <%= link_to "New list", new_list_path, class: "btn btn-primary mx-3", role: "button" %>
</div>
<div class="my-3">
  <% if @lists.empty? %>
    <p>No lists yet!</p>
  <% else %>
    <% @lists.each do |list| %>
      <div class="card-product my-3">
        <%= link_to "", list_path(list), class: "card-link" %>
        <% if list.photo.attached? %>
          <%= cl_image_tag list.photo.key, alt: list.name, height: 120, width: 120, crop: :fill %>
        <% else %>
          <%= image_tag "coffee.jpg", alt: list.name %>
        <% end %>
        <div class="card-product-infos">
          <h2><%= list.name %></h2>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
