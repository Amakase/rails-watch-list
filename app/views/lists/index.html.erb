<h1>All Lists</h1>
<p><%= link_to "Create a new list", new_list_path %></p>
<ul class="list-group">
<% if @lists.empty? %>
  <li class="list-group-item">No lists yet!</li>
<% else %>
  <% @lists.each do |list| %>
    <li class="list-group-item"><%= link_to list.name, list_path(list) %></li>
  <% end %>
<% end %>
</ul>
