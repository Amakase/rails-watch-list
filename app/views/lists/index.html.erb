<div class="d-flex align-items-center">
  <h1 class="mb-0">All Lists</h1>
  <%= link_to "New list", new_list_path, class: "btn btn-primary mx-3", role: "button" %>
</div>
<div class="my-3">
  <% if @lists.empty? %>
    <p>No lists yet!</p>
  <% else %>
    <% @lists.each do |list| %>
      <div class="card-product my-3">
        <%= link_to "", list_path(list), class: "card-link" %>
        <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
        <div class="card-product-infos">
          <h2><%= list.name %></h2>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
