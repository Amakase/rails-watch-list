<div>
  <% if @list.photo.attached? %>
    <%= cl_image_tag @list.photo.key, alt: @list.name, class: "header-img", height: 300, crop: :fill %>
  <% else %>
    <%= image_tag "coffee.jpg", alt: @list.name, class: "header-img" %>
  <% end %>
</div>
<div class="d-flex align-items-center mt-3">
  <h1 class="mb-0"><%= @list.name %></h1>
  <%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-primary mx-3", role: "button" %>
</div>
<hr class="border mt-1" />
<div class="cards my-3">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="card" style="width: 18rem;">
      <%= image_tag bookmark.movie.poster_url, class: "card-img-top", alt: bookmark.movie.title + " Movie Poster" %>
      <div class="card-body">
        <h5 class="card-title"><%= bookmark.movie.title %></h5>
        <p class="card-text"><i class="fa-solid fa-star"></i><%= bookmark.movie.rating %></p>
        <p class="card-text">"<%= bookmark.comment %>"</p>
        <p class="card-text"><%= bookmark.movie.overview.truncate(150) %></p>
      </div>
      <div class="card-footer">
        <%= link_to "Delete", bookmark_path(bookmark), class: "btn btn-danger text-light", role: "button", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
      </div>
    </div>
  <% end %>
</div>
<%= link_to "Back to All Lists", lists_path, class: "btn btn-primary", role: "button" %>
